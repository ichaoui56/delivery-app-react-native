{
  "expo": {
    "name": "delivery-man",
    "slug": "delivery-man",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "deliveryman",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    
    // ADD THIS FOR ANDROID BUILD
    "android": {
      "package": "com.sonicdelivery.deliveryman", // ← REQUIRED: Change to your company name
      "versionCode": 1, // ← REQUIRED: Increment this for each update
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png",
        "backgroundColor": "#184794"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      
      // OPTIONAL: Add permissions if your app needs them
      "permissions": [
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA"
      ]
    },
    
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sonicdelivery.deliveryman" // For future iOS builds
    },
    
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    
    // ADD THIS FOR SPLASH SCREEN
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff",
      "dark": {
        "image": "./assets/images/splash-icon.png",
        "resizeMode": "contain",
        "backgroundColor": "#000000"
      }
    },
    
    "plugins": [
      "expo-router",
      "expo-secure-store"
    ],
    
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    
    // ADD THIS FOR EXTRA CONFIG
    "extra": {
      "eas": {
        "projectId": "sonic-delivery" // Will be created automatically
      }
    }
  }
}